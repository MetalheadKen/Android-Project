<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tw.edu.ncut.csie.qr_code.MainActivity"
    >


    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        app:layout_constraintLeft_toLeftOf="@+id/lv"
        app:layout_constraintRight_toRightOf="@+id/lv"
        app:layout_constraintBottom_toBottomOf="@+id/lv" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        tools:layout_editor_absoluteY="5dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/webView"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.01">

        <Button
            android:text="Scanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scan_btn" />

        <Button
            android:text="確定購買"
            android:layout_height="wrap_content"
            android:id="@+id/btn_checkout"
            tools:layout_editor_absoluteY="33dp"
            tools:layout_editor_absoluteX="119dp"
            android:layout_weight="1"
            android:layout_width="90dp" />

        <Button
            android:text="加入購物單"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/get_btn"
            app:layout_constraintRight_toLeftOf="@+id/webView"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="255dp"
        android:layout_height="29dp"
        android:layout_weight="1"
        android:id="@+id/LinearLayout2"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/webView"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_height="22dp"
            android:id="@+id/tv_1"
            android:layout_width="124dp"
            tools:layout_editor_absoluteY="261dp"
            tools:layout_editor_absoluteX="21dp"
            android:layout_weight="1"
            android:text="總金額為:0元" />

        <TextView
            android:text="可輸入最大消費金額"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_cost"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="272dp"
            android:layout_weight="1" />
    </LinearLayout>

    <WebView
        android:id="@+id/webView"
        android:focusable="false"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="311dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="340dp"
        app:layout_constraintVertical_bias="1.0" />

    <ListView
        android:layout_width="248dp"
        android:id="@+id/lv"
        android:fastScrollEnabled="false"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/webView"
        app:layout_constraintHorizontal_bias="0.39"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="200dp" />

</android.support.constraint.ConstraintLayout>
